//convert.php
<?php
if ($_SERVER['REQUEST_METHOD'] == 'POST') {
    $dollars = $_POST['dollars'];
    $exchange_rate = 83.5;
    $rupees = $dollars * $exchange_rate;
    ?>
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
